      $apireturn["playlists"] = userplaylists ($_REQUEST["id"]);
      $apireturn["status"]["success"] = "true";
      $apireturn["user"]["id"] = $_REQUEST["id"];
  }

  echo savecache ("/user/{$_REQUEST["id"]}/lists.json", apireturn ($apireturn));