  if (!postcheck ($_REQUEST, ["id"]))
  {
    $apireturn["status"]["success"] = "false";
    $apireturn["status"]["error"] = "Missing fields";
  }
  else
  {
      // everything ok

      $apireturn["works"] = worklist ($_REQUEST["id"]);
      $apireturn["favorite"] = composerlist ("favorite", $_REQUEST["id"]);
